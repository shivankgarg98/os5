let $SCRPATH=expand("<sfile>:p:h")
set path=$SCRPATH/**

let NERDTreeIgnore = ['\.o$']

set foldmethod=indent
set foldcolumn=1
set foldlevel=100

call rainbow_parenthsis#LoadRound()
call rainbow_parenthsis#LoadSquare()
call rainbow_parenthsis#LoadBraces()
call rainbow_parenthsis#LoadChevrons()
call rainbow_parenthsis#Activate()

let g:syntastic_c_include_dirs = [ 'library/include', 'kernel/include' ]
let g:syntastic_c_compiler = 'clang -fsyntax-only -Wall -Wextra -pedantic'

set wildignore=*.o

